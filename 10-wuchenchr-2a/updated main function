#include "card.h"
#include "deck.h"
#include <stdexcept>
#include <iostream>
#include <random>
#include <ctime>
using namespace std;

//Main cpp file

//Test: Card setting, printing

int main() {
	try {
		Deck mydeck = Deck();
		cout << "--- Before shuffle ---" << endl;
		cout << mydeck << endl;
		//Shuffle the original deck 3 times
		for (int i = 0; i < 3; ++i){
		mydeck.shuffle();
		}
		cout << "--- After shuffle ---" << endl;
		cout << mydeck;
	}
	catch (std::invalid_argument& e) {
		cout << e.what();
	}

	return 0;
}
